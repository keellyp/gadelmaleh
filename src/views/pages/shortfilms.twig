{{ include('/partials/header.twig') }}

<div class="container-box">
    <div class="nav-pages">
        <div class="first-box">
            <p class="description">
                En plus de faire le box-office, Gad Elmaleh aime jouer dans des courts-métrages.
            </p>

        </div>
        <div class="container-contents">
            <section>
                <article>
                    <div class="title">
                        <h3>Tous les courts-métrages</h3>
                    </div>
                    <div class="img-box">
                        {% for _shortfilm in shortfilms %}
                            <div class="image-container image-grid">
                                <a href="{{ url('shortfilm', {name:_shortfilm.slug}) }}" class="tag-a-block">
                                    <div class="image" style="background-image: url(' {{ global.request.basepath }}/dist/img/shortfilm/{{_shortfilm.id}}.png ')"></div>
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </article>
            </section>
        </div>
    </div>
</div>

{{ include('/partials/footer.twig') }}
