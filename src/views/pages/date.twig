{{ include('/partials/header.twig') }}

<div class="container-box">
    <div class="nav-pages">
        <div class="first-box">
            <p class="description">
                Voici un aperçu des oeuvres toutes catégories confondues de Gad Elmaleh en {{ date }}
            </p>

        </div>
        <div class="container-contents">
            <section>
                <article>
                    <div class="title">
                        <h3>{{ date}}</h3>
                    </div>
                    <div class="img-box">
                        {% for _content in contents %}
                        <div class="poster">
                            <a href=" {{ url(_content.content, {name: _content.slug} ) }} "><img src="{{ global.request.basepath }}/dist/img{{_content.picture}}" alt="poster"></a>
                        </div>
                        {% endfor %}
                    </div>
                    {% if error %}
                        <div class="text-box">
                            <p>Pas de résultats cette année-là !</p>
                        </div>
                    {% endif %}

                </article>
            </section>
        </div>
    </div>
</div>

{{ include('/partials/footer.twig') }}
